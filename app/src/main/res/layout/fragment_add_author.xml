<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddAuthorFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить автора"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/addAuthorFragment_nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя на русском"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/addAuthorFragment_name_eng_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя на английском"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/addAuthorFragment_descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/addAuthorFragment_save_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:layout_margin="20dp"/>
</LinearLayout>